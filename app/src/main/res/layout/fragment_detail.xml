<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ds24.ds24android.fragments.DetailFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe_detail">
        <RelativeLayout
            android:id="@+id/parent_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/aon_desc"
                android:text="@string/aon_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"/>
            <TextView
                android:id="@+id/aon_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/aon_desc"
                android:layout_toRightOf="@id/aon_desc"/>

            <TextView
                android:id="@+id/cont_phone_desc"
                android:text="@string/cont_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/aon_desc"/>
            <TextView
                android:id="@+id/cont_phone_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/cont_phone_desc"
                android:layout_toRightOf="@id/cont_phone_desc"/>

            <TextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cont_phone_desc"/>

            <TextView
                android:id="@+id/work_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/note"/>

            <TextView
                android:id="@+id/created_ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/work_type"/>

            <TextView
                android:id="@+id/status_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:layout_below="@id/created_ref"/>
            <RelativeLayout
                android:id="@+id/status_change_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/status_desc">
                <TextView
                    android:id="@+id/status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" />
                <ImageView
                    android:id="@+id/status_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/employee_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/employee"
                android:layout_below="@id/status_change_layout"/>
            <RelativeLayout
                android:id="@+id/employee_change_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/employee_desc">
                <TextView
                    android:id="@+id/employee_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" />
                <ImageView
                    android:id="@+id/employee_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/responsible_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/responsible"
                android:layout_below="@id/employee_change_layout"
                />
            <RelativeLayout
                android:id="@+id/responsible_change_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/responsible_desc">
                <TextView
                    android:id="@+id/responsible_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" />
                <ImageView
                    android:id="@+id/responsible_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/deadline_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deadline"
                android:layout_below="@id/responsible_change_layout"/>
            <RelativeLayout
                android:id="@+id/deadline_change_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/deadline_desc">
                <TextView
                    android:id="@+id/deadline_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" />
                <ImageView
                    android:id="@+id/deadline_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_arrow_right"/>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
